<% include ../templates/header %>

<article style="padding:24px;">
  <form>
    <input type="hidden" id="id_petugas" value="<%= petugas.id_petugas %>">

    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" placeholder="johndoe56" value="<%= petugas.username %>">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" placeholder="********">
    </div>

    <div class="form-group">
      <label for="nama">Nama</label>
      <input type="text" name="nama" id="nama" placeholder="John Doe" value="<%= petugas.nama_petugas %>">
    </div>

    <div class="form-group">
      <label for="jenis_petugas">Jenis Petugas</label>
      <select name="jenis_petugas" id="jenis_petugas">
        <option value="Admin" <%= petugas.jenis_petugas === 'Admin' ? 'selected' : '' %>>Admin</option>
        <option value="Pemesanan" <%= petugas.jenis_petugas === 'Pemesanan' ? 'selected' : '' %>>Pemesanan</option>
        <option value="Check In" <%= petugas.jenis_petugas === 'Check In' ? 'selected' : '' %>>Check In</option>
      </select>
    </div>

    <div class="form-group">
      <button class="btn accent-color" id="simpan">Simpan</button>
    </div>
  </form>
</article>
</section>

<script src="/javascripts/jquery.js"></script>
<script src="/javascripts/main.js"></script>
<script src="/javascripts/petugas/ubah.js"></script>
</main>
</body>

</html>